
.row.proximos-viajes    
    each viaje in viajes    
        //itera todos los viajes que hay en la consulta
        .col-md-6.col-lg-4.mb-4 
            .card
                img.card-img-top(src=`img/destinos_${viaje.imagen}.jpg`)
                .card-body  
                    h2=viaje.titulo
                    p   
                        svg.icon.icon-tabler.icon-tabler-calendar-event(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#00bfd8' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            rect(x='4' y='5' width='16' height='16' rx='2')
                            line(x1='16' y1='3' x2='16' y2='7')
                            line(x1='8' y1='3' x2='8' y2='7')
                            line(x1='4' y1='11' x2='20' y2='11')
                            rect(x='8' y='15' width='2' height='2')
                        |#{viaje.fecha_ida}    -     #{viaje.fecha_vuelta}
                    
                    p 
                        svg.icon.icon-tabler.icon-tabler-users(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#00bfd8' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            circle(cx='9' cy='7' r='4')
                            path(d='M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
                            path(d='M16 3.13a4 4 0 0 1 0 7.75')
                            path(d='M21 21v-2a4 4 0 0 0 -3 -3.85')
                        | Disponibles: #{viaje.disponibles}
                    p #{viaje.descripcion.substr(0,100)}  ...

                    a(href=`deleteViaje/${viaje.id}`, class="btn btn-danger btn-xs btn-block") Eliminar    
.col-md-12
    h2.d-block.w-100.text-center.mt-5 Agrega un nuevo Viaje
    if(errores)
        each error in errores   
            .alert.col.alert-danger.text-center= error.mensaje

.row.justify-content-center.col
    .col-md-8
        form(action="" method="POST")
            .form-group
                label.text-justify(for="titulo") Titulo
                input#titulo(Type="text", placeholder="Titulo", name="titulo", class="form-control", value= titulo)
            .form-group
                label.text-justify(for="precio") Precio
                input#precio(Type="text", placeholder="Precio", name="Precio", class="form-control", value= precio)
            .form-group
                label.text-justify(for="fecha_ida") Fecha ida
                input#titulo(Type="text", placeholder="2000/01/31", name="fecha_ida", class="form-control", value= fecha_ida)
            .form-group
                label.text-justify(for="fecha_vuelta") Fecha vuelta
                input#titulo(Type="text", placeholder="2000/01/31", name="fecha_vuelta", class="form-control", value= fecha_vuelta) 
            .form-group
                label.text-justify(for="imagen") Imagen portada
                input#titulo(Type="text", placeholder="paris", name="imagen", class="form-control", value= imagen)
            .form-group
                label(for="archivo") Subir Imagen:
                input.d-block(type="file", name="archivo", placeholder= "(Mismo nombre que imagen Portada)", id="archivo")
            .form-group 
                label(for="descripcion") Descripcion
                textarea#mensaje(name="descripcion", cols="30", rows="3" placeholder="Descripcion" class="form-control"
                )= descripcion
            .form-group
                label.text-justify(for="disponibles") Disponibles
                input#titulo(Type="text", placeholder="Disponibles", name="disponibles", class="form-control", value= disponibles)
            .form-group
                label.text-justify(for="slug") Slug
                input#titulo(Type="text", placeholder="viaje-mexico", name="slug", class="form-control", value= slug)
            
            input.btn.btn-success.btn-block(type="submit")